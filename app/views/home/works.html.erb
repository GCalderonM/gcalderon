<div class="flex flex-col justify-center mx-auto max-w-4xl text-center mt-24">
    <h1 class="text-4xl font-extrabold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100">
        My real work experience.
    </h1>
    <p class="mt-6 text-base text-zinc-600 dark:text-zinc-400">
        Im a junior developer with almost 2 years of real experience on this companys..
    </p>

    <div class="mt-16 mb-16">
        <div class="space-y-20">
            <% if @works.present? %>
                <% @works.each do |work| %>
                    <section aria-labelledby=":r0:" class="text-left md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40">
                        <div class="grid max-w-3xl grid-cols-1 items-baseline gap-y-8 md:grid-cols-4">
                            <h2 id=":r0:" class="text-sm font-semibold text-zinc-800 dark:text-zinc-100">
                                <%= work.start_year %> - <%= work.finish_year %>
                            </h2>
                        <div class="md:col-span-3">
                            <ul role="list" class="space-y-16">
                                <li class="group relative flex flex-col items-start">
                                    <div class="relative mt-1 mb-5 flex h-10 w-10 flex-none items-center justify-center rounded-full bg-zinc-100 shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:ring-0">
                                        <%= image_tag work.logo, class: "h-7 w-7 object-contain rounded-lg" %>
                                    </div>
                                    <div>
                                        <h3 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
                                            <%= work.company_name %>
                                        </h3>
                                        <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                                            <%= work.job %>
                                        </p>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </section>
                <% end %>
            <% else %>
                <h2 class="text-xl text-zinc-800 dark:text-zinc-100">There's no available work experience :(</h2>
            <% end %>
        </div>
    </div>
</div>
